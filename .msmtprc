# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        ~/.msmtp.log

# work
account        work
host           your_work_mail_host
port           587
from           your_work_mail_account
user           your_work_mail_usernam
password

# personal
account        personal
host           your_personal_mail_host
port           587
from           your_personal_mail_account
user           your_personal_mail_username
password

# Set a default account
account default : work
